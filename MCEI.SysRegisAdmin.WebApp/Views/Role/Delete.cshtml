@model MCEI.SysRegisAdmin.EN.Role___EN.Role

@{
    ViewData["Title"] = "Eliminar Rol";
}

<h1>Eliminar Rol Existente</h1>
<h3>¿Estas Seguro De Eliminar Este Registro? No Podras Revertir Esta Accion</h3>
<hr />
<div>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete" id="Form" onsubmit="CreateRecord(event)">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Rol"/> |
        <a asp-action="Index">Regresar a La Lista</a>
    </form>
</div>

@section Scripts {
    <script>
        function CreateRecord(e) {
            e.preventDefault();

            const form = document.getElementById('Form');
            const nameInput = document.getElementById('Name');

            Swal.fire({
                title: '¿Estas Seguro De Eliminar Este Registro?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Si, Eliminar Registro'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}